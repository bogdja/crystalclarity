					<ul class="dropdown-menu dropdown-menu-right">
						{% for store in stores %}
						<li><a href="{{ store.href }}">{{ store.name }}</li>
						{% endfor %}
					</ul>
				</div>
				{% endif %}
				{% endif %}
				<a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a>
			</div>
			<h1>{{ heading_title }}</h1>
