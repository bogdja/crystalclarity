{{ header }}
<div id="affiliate-login" class="container-fluid container-xl flex-grow-1">
 	<nav aria-label="breadcrumb">
        <ul class="breadcrumb ds-breadcrumb fsz-12">
        {% for breadcrumb in breadcrumbs %}
            {% if loop.last %}
                <li class="breadcrumb-item ds-breadcrumb-item">{{ breadcrumb.text }}</li>
            {% else %}
                <li class="breadcrumb-item ds-breadcrumb-item"><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
            {% endif %}
        {% endfor %}
        </ul>
    </nav>
    <main>
        <div class="row">
            <div class="col-12 ds-page-title pb-3">
                <h1>{{ heading_title }}</h1>
            </div>
        </div>
        <div class="content-top-box">{{ content_top }}</div>
        {% if success %}
            <script>
                scNotify('success', '{{ success }}');
            </script>
        {% endif %}
        {% if error_warning %}
            <script>
                scNotify('warning', '{{ error_warning }}');
            </script>
        {% endif %}
        <div id="content" class="ds-account row g-3">
            <div class="col-lg-6">
                <div class="content-block h-100">
                    <div class="content-block-title dark-text with-border-bottom pb-3 mb-3 fw-500 fsz-16 w-100">{{ text_returning_affiliate }}</div>
                    <form action="{{ action }}" method="post" enctype="multipart/form-data">
                        <div class="form-group mb-3">
                            <label class="dark-text fsz-14 fw-500 mb-1" for="input-email">{{ entry_email }}</label>
                            <input type="text" name="email" value="{{ email }}" placeholder="{{ entry_email }}" id="input-email" class="form-control"/>
                        </div>
                        <div class="form-group mb-3">
                            <label class="dark-text fsz-14 fw-500 mb-1" for="input-password">{{ entry_password }}</label>
                            <input type="password" name="password" value="{{ password }}" placeholder="{{ entry_password }}" id="input-password" class="form-control"/>
                        </div>
                        <div class="ds-account-login-forgotten mb-3">
                            <a href="{{ forgotten }}" class="blue-link fw-500 fsz-14">{{ text_forgotten }}</a>
                        </div>
                        <button type="submit" class="button button-primary br-7 ds-account-login-button">{{ button_login }}</button>
                        {% if redirect %}
                            <input type="hidden" name="redirect" value="{{ redirect }}"/>
                        {% endif %}
                    </form>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="content-block h-100 d-flex flex-column align-items-start">
                    <div class="content-block-title dark-text with-border-bottom pb-3 mb-3 fw-500 fsz-16 w-100">{{ text_register }}</div>
                    <div class="fsz-14 secondary-text fw-300 mb-3">{{ text_register_account }}</div>
                    <a href="{{ register }}" class="button button-primary br-7 ds-account-login-button mt-auto">{{ button_continue }}</a>
                </div>
            </div>
        </div>
        {{ content_bottom }}
    </main>
</div>
{{ footer }}
