{{ header }}
<div id="information-sitemap" class="container-fluid container-xl flex-grow-1">
	<main>
		<nav aria-label="breadcrumb">
			<ul class="breadcrumb ds-breadcrumb fsz-12">
			{% for breadcrumb in breadcrumbs %}
				{% if loop.last %}
					<li class="breadcrumb-item ds-breadcrumb-item">{{ breadcrumb.text }}</li>
				{% else %}
					<li class="breadcrumb-item ds-breadcrumb-item"><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
				{% endif %}
			{% endfor %}
			</ul>
		</nav>
		<div class="row">
			<div class="col-12 ds-page-title pb-3">
				<h1>{{ heading_title }}</h1>
			</div>
		</div>
		<div class="content-top-box">{{ content_top }}</div>
		<div class="row g-3">
			{{ column_left }}
			{% if column_left and column_right %}
		    {% set class = 'col-xl-6' %}
		    {% elseif column_left or column_right %}
		    {% set class = 'col-xl-9' %}
		    {% else %}
		    {% set class = 'col-xl-12' %}
		    {% endif %}
		    <div id="content" class="{{ class }}">
				<div class="row">
					<div class="col-sm-6">
						<div class="content-block fsz-14 fw-300 secondary-text">
							<ul class="mb-0">
								{% for category_1 in categories %}
								<li>
									<a href="{{ category_1.href }}" class="blue-link">{{ category_1.name }}</a>
									{% if category_1.children %}
									<ul>
										{% for category_2 in category_1.children %}
										<li>
											<a href="{{ category_2.href }}" class="blue-link">{{ category_2.name }}</a>
											{% if category_2.children %}
											<ul>
												{% for category_3 in category_2.children %}
												<li><a href="{{ category_3.href }}" class="blue-link">{{ category_3.name }}</a></li>
												{% endfor %}
											</ul>
											{% endif %}
										</li>
										{% endfor %}
									</ul>
									{% endif %}
								</li>
								{% endfor %}
							</ul>
						</div>
					</div>
					<div class="col-sm-6">
						<div class="content-block fsz-14 fw-300 secondary-text">
							{% if blog_categories %}
							<ul class="mb-0">
								{% for blog_category_1 in blog_categories %}
								<li>
									<a href="{{ blog_category_1.href }}" class="blue-link">{{ blog_category_1.name }}</a>
									{% if blog_category_1.children %}
									<ul>
										{% for blog_category_2 in blog_category_1.children %}
										<li>
											<a href="{{ blog_category_2.href }}" class="blue-link">{{ blog_category_2.name }}</a>
											{% if blog_category_2.children %}
											<ul>
												{% for blog_category_3 in blog_category_2.children %}
												<li><a href="{{ blog_category_3.href }}" class="blue-link">{{ blog_category_3.name }}</a></li>
												{% endfor %}
											</ul>
											{% endif %}
										</li>
										{% endfor %}
									</ul>
									{% endif %}
								</li>
								{% endfor %}
							</ul>
							{% endif %}
							<ul>
								<li><a href="{{ special }}" class="blue-link">{{ text_special }}</a></li>
								<li>
									<a href="{{ account }}" class="blue-link">{{ text_account }}</a>
									<ul>
										<li><a href="{{ edit }}" class="blue-link">{{ text_edit }}</a></li>
										<li><a href="{{ password }}" class="blue-link">{{ text_password }}</a></li>
										<li><a href="{{ address }}" class="blue-link">{{ text_address }}</a></li>
										<li><a href="{{ history }}" class="blue-link">{{ text_history }}</a></li>
										<li><a href="{{ download }}" class="blue-link">{{ text_download }}</a></li>
									</ul>
								</li>
								<li><a href="{{ history }}" class="blue-link">{{ text_cart }}</a></li>
								<li><a href="{{ checkout }}" class="blue-link">{{ text_checkout }}</a></li>
								<li><a href="{{ search }}" class="blue-link">{{ text_search }}</a></li>
								<li>
									{{ text_information }}
									<ul>
										{% for information in informations %}
										<li><a href="{{ information.href }}" class="blue-link">{{ information.title }}</a></li>
										{% endfor %}
										<li><a href="{{ contact }}" class="blue-link">{{ text_contact }}</a></li>
									</ul>
								</li>
							</ul>
						</div>
					</div>
				</div>
			</div>
			{{ column_right }}
		</div>
		{{ content_bottom }}
	</main>
</div>
{{ footer }}
