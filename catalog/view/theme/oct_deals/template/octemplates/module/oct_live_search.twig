{% if query_corrected %}
	<p class="mb-2 dark-text fw-400 fsz-14">{{ text_corrected_search }}</p>
{% endif %}

{% if manufacturers is not empty %}
	<p class="fsz-16 fw-500 dark-text">{{ founded_manufacturers }}</p>
	<div class="ds-livesearch-items-box row mb-3 g-2">
		{% for category in manufacturers %}
			<div class="ds-livesearch-categories-item">
				<a class="content-block d-flex flex-column align-items-center justify-content-center p-2 h-100" href="{{ category.href }}">
					{% if manufacturer_image %}
						<img src="{{ category.image }}" alt="{{ category.name }}" width="60" height="60" />
						<span class="ds-subcategories-title dark-text fw-500 fsz-12 text-center lh-sm mt-2">{{ category.name }}</span>
					{% else %}
						<span class="ds-subcategories-title dark-text fw-500 fsz-12 text-center lh-sm">{{ category.name }}</span>
					{% endif %}
				</a>
			</div>
		{% endfor %}
	</div>
{% endif %}

{% if direct_categories is not empty %}
	<p class="fsz-16 fw-500 dark-text">{{ founded_categories }}</p>
	<div class="ds-livesearch-items-box row mb-3 g-2">
		{% for category in direct_categories %}
			<div class="ds-livesearch-categories-item">
				<a class="content-block d-flex flex-column align-items-center justify-content-center p-2 h-100" href="{{ category.href }}">
					{% if category_image %}
						<img src="{{ category.image }}" alt="{{ category.name }}" width="60" height="60" />
						<span class="ds-subcategories-title dark-text fw-500 fsz-12 text-center lh-sm mt-2">{{ category.name }}</span>
					{% else %}
						<span class="ds-subcategories-title dark-text fw-500 fsz-12 text-center lh-sm">{{ category.name }}</span>
					{% endif %}
				</a>
			</div>
		{% endfor %}
	</div>
{% endif %}

{% if product_categories is not empty %}
	<p class="fsz-16 fw-500 dark-text">{{ founded_in_categories }}</p>
	<div class="ds-livesearch-items-box row mb-3 g-2">
		{% for category in product_categories %}
			<div class="ds-livesearch-categories-item">
				<a class="content-block d-flex flex-column align-items-center justify-content-center p-2 h-100" href="{{ category.href }}">
					{% if category_image %}
						<img src="{{ category.image }}" alt="{{ category.name }}" width="60" height="60" />
						<span class="ds-subcategories-title dark-text fw-500 fsz-12 text-center lh-sm mt-2">{{ category.name }}</span>
					{% else %}
