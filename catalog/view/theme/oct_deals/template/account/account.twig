						</svg>{{ oct_account_main_info }}
					</div>
					<div class="table-responsive fsz-14 fw-300">
					    <table class="table table-hover">
					       	<thead class="thead-dark">
					         	<tr>
						            <th scope="col">{{ oct_account_name }}</th>
						            <th scope="col">{{ oct_account_email }}</th>
					            </tr>
					        </thead>
					        <tbody>
					            <tr>
					                <td>{{ firstname }}</td>
					            	<td>
					            		<div class"d-flex justify-content-between"><span class="me-3">{{ email }}</span>&nbsp;<a href="{{ edit }}" class="blue-link">{{ oct_account_edit }}</a></div>
					            	</td>
					          	</tr>
					        </tbody>
					    </table>
					</div>
					<div class="content-block-title dark-text fw-500 fsz-16 my-3 pt-3 d-flex align-items-center">
